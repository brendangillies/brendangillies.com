<div class="row text-center">
	<%= render(:partial => '/shared/navbar')%>
</div>


<div class="container container-content">
	<div class="row row-1 text-center">
		<h3>Get in touch</h3>
			
			
			<div class="col-sm-3"></div>
			
			<div class="col-sm-6">
				<%= form_for(:contact, :url => {:action => 'create'}) do |f| %>
					<table summary="Form for contact">
						<tr>
						<th><%= f.label(:first_name, "First")%></th>
						<td><%= f.text_field(:first_name)%></td>
						</tr>
			
						<tr>
						<th><%= f.label(:last_name, "Last") %></th>
						<td><%= f.text_field(:last_name)%></td>
						</tr>
			
						<tr>
						<th><%= f.label(:email, "E-mail") %></th>
						<td><%= f.text_field(:email)%></td>
						</tr>
											
						<tr>
						<th><%= f.label(:phone, "Phone (Optional)")%></th>
						<td><%= f.text_field(:phone)%></td>
						</tr>
					
						<tr>
						<th><%= f.label(:company)%></th>
						<td><%= f.text_field(:company)%></td>
						</tr>
				
					
						<tr>
						<th><%= f.label(:message)%></th>
						<td><%= f.text_area(:message, :size => "24x5")%></td>
						</tr>
					</table>
				
					<div class="form-buttons">
						<%= submit_tag("Create Contact")%>
					</div>
	
				<% end %>
			</div>
			
			<div class="col-sm-3"></div>
			
			
			
	</div>

</div>